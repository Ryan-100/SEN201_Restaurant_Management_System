{
  "name": "sen201-restaurant-management-system",
  "private": true,
  "version": "0.0.0",
  "description": "A restaurant management system",
  "author": {
    "name": "BinaryBrains",
    "email": "khtet@cmkl.ac.th"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:electron": "cross-env ELECTRON_START_URL=http://localhost:5173 electron .",
    "build": "vite build",
    "build:electron": "vite build && electron-builder -c.extraMetadata.main=electron/main.js",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "electron ."
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.14",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router": "^7.9.3",
    "react-router-dom": "^7.9.4",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react-swc": "^4.1.0",
    "eslint": "^9.37.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.4.0",
    "vite": "^7.1.7",
    "electron": "^31.7.4",
    "electron-builder": "^25.1.8",
    "cross-env": "^7.0.3",
    "vite-plugin-pwa": "^1.1.0",
    "workbox-window": "^7.3.0"
  },
  "main": "electron/main.js",
  "build": {
    "appId": "com.binarybrains.restaurantapp",
    "productName": "Restaurant-Management-System",
    "executableName": "restaurant-app",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "publish": null,
    "mac": {
      "target": ["dmg", "zip"],
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": ["nsis", "zip"]
    },
    "linux": {
      "target": ["rpm", "zip"],
      "category": "Utility"
    }
  }
}